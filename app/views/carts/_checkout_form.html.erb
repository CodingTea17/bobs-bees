<% if @user_addresses %>
	<%= form_tag cart_processaddress_path do |f| %>
	<div class="form-check">
			<% @user_addresses.each do |address| %>
			<div class="form-check">
				<label class="form-check-label">
					<%= radio_button_tag :address_id, address.id, class: "form-check-input" %>
					<%= "#{address.full_name} #{address.street1} #{address.street2} #{address.city}, #{address.state} #{address.zipcode}" %>
				</label>
			</div>
			<% end %>
			<%= submit_tag "Continue", :class => "btn btn-success" %>
		</div>
	<% end %>
<% else %>
	<%= form_for @address do |f| %>
		<div class="form-group"> <!-- Full Name -->
	    <%= f.label :full_name %><br />
	    <%= f.text_field :full_name, autofocus: true, :class => "form-control", :placeholder => "Bob Markman" %>
		</div>

		<div class="form-group"> <!-- Street 1 -->
	    <%= f.label :street1 %><br />
	    <%= f.text_field :street1, :class => "form-control", :placeholder => "1234 N Main St." %>
		</div>

		<div class="form-group"> <!-- Street 2 -->
	    <%= f.label :street2 %><br />
	    <%= f.text_field :street2, :class => "form-control", :placeholder => "Unit 1 (Optional)" %>

		<div class="form-group"> <!-- City-->
	    <%= f.label :city %><br />
	    <%= f.text_field :city, :class => "form-control", :placeholder => "Portland" %>
		</div>

		<div class="form-group"> <!-- State -->
			<%= f.label :state%><br />
	    <%= f.select :state,
						[["Alabama","AL"],
						["Alaska","AK"],
						["Arizona","AZ"],
						["Arkansas","AR"],
						["California","CA"],
						["Colorado","CO"],
						["Connecticut","CT"],
						["Delaware","DE"],
						["District Of Columbia","DC"],
						["Florida","FL"],
						["Georgia","GA"],
						["Hawaii","HI"],
						["Idaho","ID"],
						["Illinois","IL"],
						["Indiana","IN"],
						["Iowa","IA"],
						["Kansas","KS"],
						["Kentucky","KY"],
						["Louisiana","LA"],
						["Maine","ME"],
						["Maryland","MD"],
						["Massachusetts","MA"],
						["Michigan","MI"],
						["Minnesota","MN"],
						["Mississippi","MS"],
						["Missouri","MO"],
						["Montana","MT"],
						["Nebraska","NE"],
